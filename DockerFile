# build stage
FROM node:lts-alpine as build-stage
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# production stage with certbot
FROM nginx:stable-alpine as production-stage

# Install certbot and openssl
RUN apk add --no-cache certbot openssl bash

# Copy built app
COPY --from=build-stage /app/dist /usr/share/nginx/html

# Copy nginx config
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Create folders for webroot and certs
RUN mkdir -p /var/www/certbot/.well-known /etc/ssl/private /etc/ssl/certs

# Add init-cert script
COPY certbot/init-cert.sh /init-cert
RUN chmod +x /init-cert

# Expose HTTP and HTTPS
EXPOSE 80 443

CMD ["/bin/sh", "-c", "/init-cert && nginx -g 'daemon off;'"]
